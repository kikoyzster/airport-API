@{
    ViewData["Title"] = "Airport Maps";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @ViewBag.AirportName</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <div class="container mx-auto mt-5">
        <header class="text-center mb-4">
            <h1 class="text-3xl font-bold">Airport Maps - @ViewBag.AirportName</h1>
        </header>

        <div class="text-center mb-4">
            <p class="text-lg">Here you can find the map for @ViewBag.AirportName</p>
        </div>

        <div class="text-center">
            <!-- Display the map image -->
            <img src="@ViewBag.ImageUrl" alt="@ViewBag.AirportName Map" class="mx-auto">
        </div>
    </div>
</body>
</html>
